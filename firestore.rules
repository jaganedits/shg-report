rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthenticated() {
      return request.auth != null;
    }

    function userDoc() {
      return get(/databases/$(database)/documents/groups/default/users/$(request.auth.uid));
    }

    function userExists() {
      return isAuthenticated() && userDoc().data != null;
    }

    function isActiveUser() {
      return userExists() && userDoc().data.status == "active";
    }

    function isAdmin() {
      return isActiveUser() && userDoc().data.role == "admin";
    }

    match /groups/default {
      allow read: if isActiveUser();
      allow create, update, delete: if isAdmin();

      match /members/{memberId} {
        allow read: if isActiveUser();
        allow create, update, delete: if isAdmin();
      }

      match /years/{yearId} {
        allow read: if isActiveUser();
        allow create, update, delete: if isAdmin();
      }

      match /users/{uid} {
        allow read: if isActiveUser();
        allow create, update, delete: if isAdmin();
      }

      match /activityLog/{logId} {
        allow read: if isActiveUser();
        allow create: if isActiveUser();
        allow update, delete: if false;
      }
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
